# 千机阁MCP服务器配置文件示例
# 复制此文件为 .env 并填入真实值

# ===== 必需配置 =====
# 千机阁API密钥 (从 https://app.chimech.com 获取)
CHIMECH_API_KEY=your-api-key-here

# 千机阁API服务器地址
CHIMECH_SERVER_URL=https://api.chimech.com

# ===== 可选配置 =====
# 服务器端口 (MCP服务器监听端口)
PORT=3000

# 日志级别 (debug, info, warn, error)
LOG_LEVEL=info

# 日志文件路径
LOG_FILE=./logs/chimech-mcp.log

# ===== 性能优化 =====
# 请求超时时间 (毫秒)
REQUEST_TIMEOUT=30000

# 重试次数
RETRY_COUNT=3

# 缓存TTL (秒, 0表示禁用缓存)
CACHE_TTL=300

# 最大并发请求数
MAX_CONCURRENT_REQUESTS=5

# ===== 安全配置 =====
# 启用TLS验证
TLS_VERIFY=true

# API限流 (每分钟最大请求数)
RATE_LIMIT=60

# ===== 代理配置 (可选) =====
# HTTP代理
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080

# ===== 调试配置 =====
# 启用调试模式
DEBUG=false

# 启用详细日志
VERBOSE=false

# 启用性能监控
ENABLE_METRICS=true

# ===== 企业配置 =====
# 工作空间ID (企业版)
WORKSPACE_ID=

# 团队ID (企业版)
TEAM_ID=

# 自定义配置文件路径
CONFIG_FILE=./config/chimech.yml

# ===== 客户端适配 =====
# 客户端类型 (cursor, cherry-studio, claude-desktop, deepchat)
CLIENT_TYPE=auto

# 启用多模态支持
ENABLE_MULTIMODAL=true

# 启用工作流自动化
ENABLE_WORKFLOW=true 